{
  "name": "Hudu+",
  "description": "Hudu+ is a collection of quality of life utilities.",
  "version": "1.0",
  "manifest_version": 3,
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "https://*.huducloud.com/kba*"
      ]
    }
  ],
  "icons": {
    "16": "images/huduplus-icon.png",
    "32": "images/huduplus-icon.png",
    "128": "images/huduplus-icon.png"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  }
}